+import subprocess
+import re
+def ping_host(hostname):
+    if not re.match(r'^[a-zA-Z0-9.-]+$', hostname):
+        raise ValueError("Invalid hostname")
+    result = subprocess.run(["ping", "-c", "1", hostname], capture_output=True, text=True)
+    return result.stdout
